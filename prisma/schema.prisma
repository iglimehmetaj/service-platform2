generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Company   Company? @relation(fields: [companyId], references: [id])
  companyId String? // Vetëm nëse user-i është i lidhur me një kompani
}

enum Role {
  SUPER_ADMIN @map("super_admin")
  COMPANY     @map("company")
  CLIENT      @map("client")
}

model Company {
  id          String  @id @default(cuid())
  name        String
  description String?
  logo        String?
  location    String?
  openingTime String?
  closingTime String?

  users User[]

  subscriptions Subscription[] // <-- lidhja dyanshmërishte

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id             String  @id @default(cuid())
  name           String  @unique
  price          Float   @default(0)
  durationInDays Int
  isActive       Boolean @default(true)

  company   Company @relation(fields: [companyId], references: [id])
  companyId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
